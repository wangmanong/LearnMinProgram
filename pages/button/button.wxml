<!--pages/button/button.wxml-->
<!-- 1.button的基本使用 -->
<button>按钮1</button>

<!-- 2.size属性：mini -->
<button size="mini">按钮2</button>

<!-- 3.type属性： -->
<button size="mini" type="primary">按钮3</button>
<button size="mini" type="default">按钮3</button>
<button size="mini" type="warn">按钮3</button>

<!-- 4.plain:按钮是否镂空，背景色透明 -->
<button plain>按钮4</button>

<!-- 5.disable:不可用 -->
<button disabled>按钮5</button>

<!-- 6.loading -->
<button loading="{{isLoading}}">按钮6</button>

<!-- 7。hover-vlass -->
<button hover-class="pressed">按钮7</button>


<!--pages/home/home.wxml-->
<text class="title">Hello World</text>
<button size="mini">按钮</button>

<!-- 1.navigator页面跳转 -->
<navigator url="/pages/detail/detail">跳转到详情页</navigator>

<!-- 2.navigator属性：<open-type></open-type> -->
<navigator url="/pages/detail/detail" open-type="redirect">跳转到详情页(redirect)</navigator>

<navigator url="/pages/about/about" open-type="switchTab">跳转到关于页面(switchTab)</navigator>

<navigator url="/pages/detail/detail" open-type="reLaunch">跳转到关于页面(reLaunch)</navigator>

<!-- 3.跳转过程中数据的传递 -->
<navigator url="/pages/detail/detail?name='111'&age=20">跳转到详情页-数据传递</navigator>

<view>{{title}}</view>

<!-- 4.通过代码进行页面跳转 -->
<button size="mini" bind:tap="btnClick">跳转</button>